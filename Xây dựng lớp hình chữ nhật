<script>
var HCN = function (dai , rong ){
    this.chuvi= function (){
        return 2*dai+2*rong;
    }
    this.dientich = function (){
        return dai*rong ;
    }
}
var hcn = new HCN ( 3 , 5 );
var chuvi = hcn.chuvi();
var dientich = hcn.dientich();
alert (chuvi);
alert(dientich);
</script>

