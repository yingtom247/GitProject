<script>
var New1 = [2 ,1 , 4 , 5, 7 , 0 ] ; 
function minArray(arr) {
    var min = arr[0];
    for(var i = 1; i < arr.length; i++){
        if(arr[i] < min){
            min = arr[i];
        }
    }
    return min;
}
alert (minArray(New1));
</script>

