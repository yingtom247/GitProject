<input type= "button" onclick="palindrome()"/>
<body>

<script >
function palindrome(str) {
 var re = /[^A-Za-z0-9]/g;
 str = str.toLowerCase().replace(re, '');
 var len = str.length;
 for (var i = 0; i < len/2; i++) {
   if (str[i] !== str[len - 1 - i]) {
       return false;
   }
 }
 return true;
 
}
palindrome("A man, a plan, a canal. Panama");
</script>
